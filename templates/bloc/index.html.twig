{% extends 'base.html.twig' %}

{% block title %}Blocs{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">123</a></li>
        <li class="breadcrumb-item">Administration</li>
        <li class="breadcrumb-item active">Blocs</li>
    </ol>

    <div class="row m-2">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

{#        <h4>Blocs</h4>#}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th style="width:66%;">Libellé</th>
                <th>Ordre</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for bloc in blocs %}
                <tr>
                    <td>{{ bloc.id }}</td>
                    <td>{{ bloc.libelle }}</td>
                    <td>{{ bloc.ordre }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('bloc_edit', {'id': bloc.id}) }}">Modifier</a>
                    </td>
                    <td>
                        {{ include('bloc/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('bloc_new') }}">Ajouter</a>

    </div>

{% endblock %}
